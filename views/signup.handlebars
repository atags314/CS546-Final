<head>
  <title>Sign up</title>
</head>
<body>
    <div class="main">
        <p class="sign" align="center">Create an Account</p>
        <form class="form2">
            <input class="firstname" type="text" align="center" placeholder="First Name">
            <input class="lastname" type="text" align="center" placeholder="Last Name">
            <input class="email" type="text" align="center" placeholder="Email Address">
            <select id="gender" name="gender">
                <option value="male">Male</option>
                <option value="volvo">Female</option>
            </select>
            <input class="city" type="text" align="center" placeholder="City">
            <input class="state" type="text" align="center" placeholder="State">
            <input class="age" type="text" align="center" placeholder="Age">
            <input class="un " type="text" align="center" placeholder="Username">
            <input class="pass" type="password" align="center" placeholder="Password">
            <input class="pass" type="password" align="center" placeholder="Confirm Password">
            <a class="submit" align="center">Sign up</a>
            <p class="signup" align="center"><a href="/login">Already have an account?</p>         
    </div> 
</body>